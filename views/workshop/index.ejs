<h1>Gift Workshop</h1>
<section class="workshop">
    
    <div class="canvas">
        <canvas id="canvasId"></canvas>
    </div>
    <%- include('../partials/errorMessage.ejs') %>
    <form id="Gift Form" action="/workshop" method="POST">
    <!-- STEP 1 -->
        <section id="step-1" class="form-step">
            <h3>Upload your gift</h3>
            <p>Allowed format files : txt</p>
            <label for="file">Choose your file</label>
            <input id="file" name="file" type="file" class="filepond">
            <ul id="file-list">
            </ul>
            <div class="backnext">
                <button class="form navigate" type="button" step_number="2">Next</button>
            </div>
        </section>
    <!-- STEP 2 -->
        <section id="step-2" class="form-step d-none">
            <h3>Choose your animation</h3>
            <div class="mt-3">
                <ul><li><div class="card animation"></div></li>
                <li><div class="card animation"></div></li>
                <li><div class="card animation"></div></li></ul>
            </div>
            <div class="backnext">
                <button class=" form navigate alt" type="button" step_number="1">Back</button>
                <button class="form navigate" type="button" step_number="3">Next</button>
            </div>
        </section>
    <!-- STEP 3 -->
        <section id="step-3" class="form-step d-none">
            <h3>Write a few words</h3>
            <div class="mt-3">
                <label for="text">Name</label>
                <input type="text" class="n-submit" placeholder="Dear..." name="receiver_name">
                <label for="text">Message</label>
                <textarea class="message" placeholder="Message..." name="message"></textarea>
                <label for="text">Signature</label>
                <input type="text" class="n-submit" placeholder="Your truly..." name="signature">
            </div>
            <div class="backnext">
                <button class="form navigate alt" type="button" step_number="2">Back</button>
                <button class="form navigate" type="button" step_number="4">Next</button>                    
            </div>
        </section>
    <!-- STEP 4 -->
        <section id="step-4" class="form-step d-none">
            <h3>Choose your color</h3>
            <div class="mt-3">
                <label for="radio">Green</label>
                <input type="radio" class="btn color" value="green" color="0x00ff00" name="enveloppe_color">
                <label for="radio">Red</label>
                <input type="radio" class="btn color" value="red" color="0xff0000" name="enveloppe_color">
                <label for="radio">Blue</label>
                <input type="radio" class="btn color" value="blue" color="0x0000ff" name="enveloppe_color" style="margin-bottom: 20px;"> 
            </div>
            <div class="backnext">
                <button class="form navigate alt" type="button" step_number="3">Back</button>
                <button class="form navigate" type="button" step_number="5">Next</button>                    
            </div>
        </section>
    <!-- STEP 5 -->
        <section id="step-5" class="form-step d-none">
            <h3>Send your gift</h3>
            <div class="mt-3">
                <label for="radio">Your mail</label>
                <input type="mail" placeholder="email@example.com" name="sender_mail">
                <label >Mail to send at</label>
                <input type="mail" placeholder="email@example.com" name="receiver_mail">
                <p class="link"></p>
                    
            </div>
            <div class="backnext">
                <button class="form navigate alt" type="button" step_number="4">Back</button>
                <button type="submit">Send</button>
            </div>
                
    </form>
</section>